<?if(!defined("B_PROLOG_INCLUDED") || B_PROLOG_INCLUDED!==true)die();?>



<div class="title-block">
<?foreach($arResult["ITEMS"] as $cell=>$arElement):?>
			<?$dateSait = date($DB->DateFormatToPHP(CSite::GetDateFormat("FULL")), time());?>
			<?
				$DTS = DateTime::createFromFormat('d.m.Y H:i:s',$dateSait);
				$timestampTom = $DTS->getTimestamp();
				$dateFulls = FormatDate('Y.d.m H:i:s',$timestampTom);
			?>
			<?
				$DTopen = DateTime::createFromFormat('d.m.Y H:i:s',$arElement["PROPERTIES"]["OPEN_WEBINAR"]["VALUE"]);
				$timestampOpen = $DTopen->getTimestamp();
				$YdateO = FormatDate("Y.d.m H:i:s",$timestampOpen);
			?>
			<?
				$DTclose = DateTime::createFromFormat('d.m.Y H:i:s',$arElement["PROPERTIES"]["CLOSE_WEBINAR"]["VALUE"]);
				$timestampClose = $DTclose->getTimestamp();
				$YdateC= FormatDate("Y.d.m H:i:s",$timestampClose);
			?>
		<?if ((($YdateO > $dateFulls) && ($YdateC > $dateFulls)) || (($YdateO < $dateFulls) && ($YdateC > $dateFulls))):?> 
				<div class="title-text">РАСПИСАНИЕ ВЕБИНАРОВ</div>
				<a href="#" class="register" >регистрация</a>
		<?endif;?>
<?endforeach;?>
</div>


<div class="table-holder">
<?if($arParams["DISPLAY_TOP_PAGER"]):?>
	<?=$arResult["NAV_STRING"]?><br />
<?endif;?>
<table>
<?$logic = false;?>
		<?foreach($arResult["ITEMS"] as $cell=>$arElement):?>
			<?
			$this->AddEditAction($arElement['ID'], $arElement['EDIT_LINK'], CIBlock::GetArrayByID($arParams["IBLOCK_ID"], "ELEMENT_EDIT"));
			$this->AddDeleteAction($arElement['ID'], $arElement['DELETE_LINK'], CIBlock::GetArrayByID($arParams["IBLOCK_ID"], "ELEMENT_DELETE"), array("CONFIRM" => GetMessage('CT_BCS_ELEMENT_DELETE_CONFIRM')));
			?>
		<?if($cell%$arParams["LINE_ELEMENT_COUNT"] == 0):?>
		<tr>
		<?endif;?>
			
			<?$dateSait = date($DB->DateFormatToPHP(CSite::GetDateFormat("FULL")), time());?>
			<?
				$DTS = DateTime::createFromFormat('d.m.Y H:i:s',$dateSait);
				$timestampTom = $DTS->getTimestamp();
				$dateFulls = FormatDate('Y.d.m H:i:s',$timestampTom);
			?>
			<?
				$DTopen = DateTime::createFromFormat('d.m.Y H:i:s',$arElement["PROPERTIES"]["OPEN_WEBINAR"]["VALUE"]);
				$timestampOpen = $DTopen->getTimestamp();
				$dateO = FormatDate("d F Y",$timestampOpen);
				$dayO = FormatDate("l",$timestampOpen);
				$timeO = FormatDate("H:i",$timestampOpen);
				$YdateO = FormatDate("Y.d.m H:i:s",$timestampOpen);
			?>
			<?
				$DTclose = DateTime::createFromFormat('d.m.Y H:i:s',$arElement["PROPERTIES"]["CLOSE_WEBINAR"]["VALUE"]);
				$timestampClose = $DTclose->getTimestamp();
				$dateC = FormatDate("d F Y",$timestampClose);
				$dayC = FormatDate("l",$timestampClose);
				$timeC = FormatDate("H:i",$timestampClose);
				$YdateC= FormatDate("Y.d.m H:i:s",$timestampClose);
			?>
			<?if ((($YdateO > $dateFulls) && ($YdateC > $dateFulls)) || (($YdateO < $dateFulls) && ($YdateC > $dateFulls))):?>
					<? $logic = true;?>
					<? $text .= '<td class="black">
							<span class="date">'.$dateO.'</span>'.$dayO.
						'</td>
						<td class="gray"><a href="'.$arElement["DETAIL_PAGE_URL"].'">'.$arElement["NAME"].'</a></td>
						<td class="time">'.$timeO.' - '.$timeC.'</td>
						
						<td class="spiker">';
							if(is_array($arElement["DISPLAY_PROPERTIES"]["SPIKER"]["DISPLAY_VALUE"]))
								foreach($arElement["DISPLAY_PROPERTIES"]["SPIKER"]["DISPLAY_VALUE"] as $arProperty)
									$text .= strip_tags($arProperty);
								endforeach;
							else
								if(!is_array($arElement["DISPLAY_PROPERTIES"]["SPIKER"]["DISPLAY_VALUE"]))
									$text .= strip_tags($arElement["DISPLAY_PROPERTIES"]["SPIKER"]["DISPLAY_VALUE"]);
								endif;
							endif;
						
						$text .= '</td>';?>
			<?endif;?>
		<?$cell++;
		if($cell%$arParams["LINE_ELEMENT_COUNT"] == 0):?>
		</tr>
		<?endif?>
		<?endforeach; // foreach($arResult["ITEMS"] as $arElement):?>
		
		<!--Вывод даты проведения вебинара-->
					<?if ($logic .= true):?>
						<?=$text?>
					<?endif;?>
		<?if($cell%$arParams["LINE_ELEMENT_COUNT"] != 0):?>
			<?while(($cell++)%$arParams["LINE_ELEMENT_COUNT"] != 0):?>
				<td>&nbsp;</td>
			<?endwhile;?>
			</tr>
		<?endif?>
</table>
<?if($arParams["DISPLAY_BOTTOM_PAGER"]):?>
	<br /><?=$arResult["NAV_STRING"]?>
<?endif;?>
</div>
